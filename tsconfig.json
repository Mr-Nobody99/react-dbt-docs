{
  "compilerOptions": {
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["DOM", "ES5"],
    "module": "CommonJS",
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": true,
    "target": "ES5",
    "allowJs": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
